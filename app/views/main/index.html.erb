              <th>Pledged Amount</th>
              <th>Funded %</th>
              <th>Supporters</th>
              <th>Days to Go</th>
            </tr>
            <% @rcm_projects.each do |p| %>
              <% p_ml = p.projects_mls.localed(params[:locale]) %>
              <tr>
                <td>
                  <%= link_to projects_detail_path(p.id) do%>
                    <%= image_tag(p_ml.image_path, width: '150px', height: '100px', alt: 'Project image') %>
