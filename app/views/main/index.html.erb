<% provide(:title, "Top") %>
<div class="row">
  <div class="col-md-12">

    <div class="hero" style="background-image:url(<%= asset_path 'ex_hero_main.jpg' %>)">
      <% hero_project_ml = @hero_project.projects_mls.localed(params[:locale]) %>
      <section class="hero-content sash-success">
        <div class="sash-success">
        </div>
        <div class="hero-left">
          <%= link_to projects_detail_path(@hero_project.id) do%>
            <%= image_tag(hero_project_ml.image_path, width: '100%', height: '100%', alt: 'Hero image') %>
          <% end %>
        </div>
        <div class="hero-right">
          <div class="hero-right-01">
            <%= link_to projects_detail_path(@hero_project.id) do %>
              <h2><%= hero_project_ml.title %></h2>
            <% end %>
          </div>
          <div class="hero-right-02">
            <%= link_to projects_creator_path do %>
              <%= image_tag(hero_project_ml.creator_image_path) %>
              <span><%= hero_project_ml.creator_name %></span>
            <% end %>
            <%= link_to projects_category_path(@hero_project.category_id), class:'category-link' do %>
              <span class="glyphicon glyphicon-tag"></span>
              <span><%= @hero_project.category_name(params[:locale]) %></span>
            <% end %>
          </div>
          <div class="hero-right-03">
            <div class="hero-right-03-01">
              <dl>
                <dt>
                  <span class="glyphicon glyphicon-usd"></span>
                  <span>Pledged</span>
                </dt>
                <dd>
                  <%= @hero_project.funded_amount_f %>
                </dd>
              </dl>
            </div>
            <% achieved=@hero_project.funding_achieved %>
            <div class="hero-right-03-02">
              <div class="meter" style="width: <%= achieved %>%">
                <p><%= number_to_percentage(achieved, precision: 0) %></p>
              </div>
            </div>
            <div class="hero-right-03-03">
              <div class="hero-right-03-03-01">
                <dl>
                  <dt>
                    <span class="glyphicon glyphicon-user"></span>
                    <span>Supporters</span>
                  </dt>
                  <dd><%= @hero_project.backer_count_f %></dd>
                </dl>
              </div>
              <div class="hero-right-03-03-02">
                <dl>
                  <dt>
                    <span class="glyphicon glyphicon-time"></span>
                    <span>Days to Go</span>
                  </dt>
                  <dd><%= @hero_project.days_to_go %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <div id="popular-base">
      <div class="recommended-area">
        <h2><span class="glyphicon glyphicon-bullhorn"></span><span><%= t('main.recommended') %></span></h2>
